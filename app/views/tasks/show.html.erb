<h1><%= @task.title %></h1>
<p>Details: <%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>

<%= link_to "Back to the task list", tasks_path %> |
<%= link_to "Edit this task", edit_task_path(@task) %> |
<%= link_to "Delete this task",
            task_path(@task),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you wanna delete this task?" } %>
